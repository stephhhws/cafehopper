<% layout ("layouts/boilerplate.ejs")%>

<div id="cluster-map" style="width: 100%; height: 500px"></div>

<div id="Add">
    <a id="addCafe" href="/cafes/new">Click Here To Add Yours!</a>
</div>

<% for (let cafe of cafes) { %>
    <div class="card mb-3" id="displayCard">
        <div class="row">
            <div class="col-md-4">
                <% if (cafe.images && cafe.images.length > 0) { %>
                    <img id="indexImg" class="img-fluid" alt="" src="<%= cafe.images[0].url %>" crossorigin="anonymous">
                <% } else { %>
                    <img id="defaultImg" class="img-fluid" alt="" src="https://images.unsplash.com/photo-1514066558159-fc8c737ef259?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=687&q=80" crossorigin="anonymous">
                <% } %>            
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title" id="indexTitle"><%= cafe.title %></h5>
                    <p class="card-text">Description: <%= cafe.description %></p>
                    <p class="card-text">
                        <small class="text-muted"><%= cafe.location %></small>
                    </p>
                    <a id="titleButton" class="btn btn-secondary" href="/cafes/<%= cafe._id%>">View <%= cafe.title %></a>
                </div>
            </div>
        </div>
    </div>
<% } %>

<script>
    const mapToken = "<%-process.env.MAPBOX_TOKEN%>";
    const cafes = {features: <%- JSON.stringify(cafes) %>};
</script>

<script src="/javascripts/clusterMap.js"></script>

